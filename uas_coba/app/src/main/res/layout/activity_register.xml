<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context="com.example.k.uas_coba.Activity.Register">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="480dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:id="@+id/linearLayout">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginBottom="30dp"
            android:background="#33a3eb">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="40dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="DAFTAR"
                android:textStyle="bold" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:background="#33a3eb"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/ic_email" />

            <EditText
                android:id="@+id/daftar_edtEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:layout_marginRight="15dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:textSize="16sp"
                android:background="@drawable/border_edittext"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:background="#33a3eb"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/ic_phone" />

            <EditText
                android:id="@+id/daftar_edtHandphone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="No. Handphone"
                android:layout_marginRight="15dp"
                android:paddingBottom="12dp"
                android:textSize="16sp"
                android:background="@drawable/border_edittext"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:background="#33a3eb"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/ic_user" />

            <EditText
                android:id="@+id/daftar_edtNama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nama"
                android:layout_marginRight="15dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:textSize="16sp"
                android:background="@drawable/border_edittext"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:background="#33a3eb"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/ic_locked" />

            <EditText
                android:id="@+id/daftar_edtUsername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Username"
                android:layout_marginRight="15dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:textSize="16sp"
                android:background="@drawable/border_edittext"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:background="#33a3eb"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/ic_key" />

            <EditText
                android:id="@+id/daftar_edtPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password"
                android:layout_marginRight="15dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:textSize="16sp"
                android:background="@drawable/border_edittext"/>
        </LinearLayout>

        <Button
            android:id="@+id/daftar_btnDaftar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView5"
            android:layout_alignBottom="@+id/textView5"
            android:layout_alignParentStart="true"
            android:background="#33a3eb"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:text="Daftar"
            android:textColor="@color/white" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/daftar_btnMasuk"
        android:layout_below="@+id/linearLayout"
        android:layout_marginEnd="66dp"
        android:layout_marginTop="18dp"
        android:text="Sudah punya akun? "
        android:textColor="#111"
        android:textSize="16dp" />

    <Button
        android:id="@+id/daftar_btnMasuk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView5"
        android:layout_alignBottom="@+id/textView5"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="79dp"
        android:background="@android:color/transparent"
        android:text="Masuk"
        android:textColor="#33a3eb" />

</RelativeLayout>